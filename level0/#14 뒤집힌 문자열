#include <stdio.h>
#include <stdbool.h>
#include <stdlib.h>
#include <string.h>

// 파라미터로 주어지는 문자열은 const로 주어집니다. 변경하려면 문자열을 복사해서 사용하세요.
char* solution(const char* my_string) {
    // return 값은 malloc 등 동적 할당을 사용해주세요. 할당 길이는 상황에 맞게 변경해주세요.
    size_t my_string_len = strlen(my_string);
    char* answer = (char*)malloc(my_string_len + 1);
    char* reverse_my_string = (char*)malloc(my_string_len + 1);
    for(int i = 0; i < my_string_len; i++){
        reverse_my_string[i] = my_string[my_string_len - i - 1];
    }
    reverse_my_string[my_string_len] = '\0';
    return answer = reverse_my_string;
}
